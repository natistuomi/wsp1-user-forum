{% extends "layout.njk" %}
{% block content %}
    <ul>
    {% for row in rows %}
        <a href="/post/{{ row.id }}">
            <li class="post">
                <h1>{{ row.title }}</h1>
                <p>Author: {{ row.author }}</p>
                <p>Tid: {{ row.createdAt  }}</p>
                <p>Meddelande: {{ row.content  }}</p>
            </li>
        </a>
    {% endfor %}
  </ul>
{% endblock %}