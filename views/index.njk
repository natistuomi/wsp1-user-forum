{% extends "layout.njk" %}
{% block content %}
    <ul>
    {% for row in rows %}
        <a href="/post/{{ row.id }}">
            <li class="post">
                <h2>{{ row.title }}</h2>
                <p>Author: {{ row.author }}</p>
                <p>Time: {{ row.createdAt  }}</p>
                <p>{{ row.content  }}</p>
            </li>
        </a>
    {% endfor %}
  </ul>
{% endblock %}